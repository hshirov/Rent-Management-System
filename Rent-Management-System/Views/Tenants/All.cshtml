@model Rent_Management_System.Models.TenantModels.TenantListModel

@{
    ViewData["Title"] = "Tenants";
}
<div class="mb-2">
    <h3>All Tenants</h3>
</div>
<div class="mb-3">
    <a asp-controller="Tenants" asp-action="Add" class="btn btn-success btn-sm">Add Tenant</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Date Of Moving In</th>
        </tr> 
    </thead>
    <tbody>
        @foreach (var tenant in Model.Tenants)
        {
            <tr>
                <td><a asp-controller="Tenants" asp-action="Index" asp-route-id="@tenant.Id" class="tenant-name">@tenant.FullName</a></td>
                <td>@tenant.Address</td>
                <td>@tenant.Email</td>
                <td>@tenant.PhoneNumber</td>
                <td>@tenant.DateOfMovingIn</td>
            </tr>
        }
    </tbody>
</table>
