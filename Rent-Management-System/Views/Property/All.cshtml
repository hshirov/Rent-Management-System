@model Rent_Management_System.Models.PropertyModels.PropertyListModel

@{
    ViewData["Title"] = "Property";
}

<div class="mb-3">
    <a asp-controller="Property" asp-action="Add" class="btn btn-success btn-sm">Add Property</a>
</div>
<div>
    <div class="row">
        @foreach (var property in Model.Properties)
        {           
            <div class="col-xl-3 col-lg-6 col-sm-12">
                <a asp-controller="Property" asp-action="Index" asp-route-id="@property.Id">
                    <div class="menu-item property-list-item">
                        <div class="row">
                            <div class="item-title col">
                                @property.Address <br />
                                <p class="secondary-text">@property.NumberOfTenants Tenants</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
        @if(Model.Properties.Count() == 0)
        {
            <h3 class="mt-2 ml-2">You don't have any properties yet.</h3>
        }
    </div>
</div>